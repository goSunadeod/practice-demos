{
  "compilerOptions": {
    "outDir": "build/compiled",
    "lib": [
      "es6"
    ],
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "strict": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}